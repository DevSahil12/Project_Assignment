<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1C1C1E">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Top Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow_left" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/profile"
                        android:textColor="#AAAAAA"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/chat" />
                </LinearLayout>

                <!-- Profile Section -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/circle"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:text="@string/andaz_kumar"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="@string/member_since_dec_2020"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/edit_24"
                        android:background="@drawable/circle"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- CRED Garage Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#292929">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/circle"
                            app:tint="#FFFFFF" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:text="@string/get_to_know_your_vehicles_inside_out"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:text="@string/cred_garage"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:layout_height="match_parent"
                                    android:layout_width="wrap_content"
                                    />
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="6dp"
                                    android:src="@drawable/arrow_right"
                                    app:tint="#FFFFFF" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Divider -->
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#222222" />

                <!-- Credit Score Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/credit_score"
                        app:tint="#AAAAAA" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:text="@string/credit_score"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <TextView
                        android:text="@string/refresh_available"
                        android:textColor="#00FF7F"
                        android:textSize="14sp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:text="@string/_757"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow_right"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#222222" />

                <!-- Lifetime Cashback -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/currency_rupee"
                        app:tint="#AAAAAA" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/lifetime_cashback"
                        android:textColor="#AAAAAA"
                        android:layout_height="match_parent"
                        android:textSize="14sp" />

                    <TextView
                        android:text="@string/_3"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow_right"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#222222" />

                <!-- Bank Balance -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bank_balance"
                        app:tint="#AAAAAA" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:text="@string/bank_balance"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <TextView
                        android:text="@string/check"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow_right"
                        app:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rewards & Benefits -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_rewards_amp_benefits"
            android:textColor="#888888"
            android:textSize="14sp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <!-- Rewards Rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/cashback_balance_n_0"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/tilt_right"
                    app:tint="#FFFFFF" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹0 available to redeem"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#222222" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/coins_n26_46_583"
                    android:textColor="#FFFFFF"
                   android:layout_height="match_parent"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/tilt_right"
                    app:tint="#FFFFFF" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="26,46,583 coins collected"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#222222" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/win_upto_rs_1000_nrefer_and_earn"
                    android:textColor="#00FFFF"
                    android:textSize="14sp"  android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/tilt_right"
                    app:tint="#FFFFFF" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/refer_friends_amp_win_up_to_1000"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                tools:ignore="RtlSymmetry" />

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transactions_amp_support"
                android:textColor="#888888"
                android:textSize="14sp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp" />
            <!-- Transactions Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/all_transactions"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/tilt_right"
                    app:tint="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</ScrollView>
